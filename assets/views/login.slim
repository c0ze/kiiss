.container ng-show="!isUserLoggedIn()"
  form.form-signin
    h2.form-signin-heading Please sign in
    label.sr-only for="inputEmail"  Email address
    input#inputEmail.form-control autofocus="" placeholder=("Email address") required="" type="email" ng-model="useremail"
    label.sr-only for="inputPassword"  Password
    input#inputPassword.form-control placeholder="Password" required="" type="password" ng-model="password"
    .checkbox
      label
        input type="checkbox" value="remember-me"
        | Remember me
      button.btn.btn-lg.btn-primary.btn-block type="submit" ng-click="login()" Login
      button.btn.btn-lg.btn-primary.btn-block type="submit" ng-click="register()" Register
.container ng-show="isUserLoggedIn()"
  h2 Welcome {{ user._emailAddress }}